<div class="music-content">
	<div class="title">
		<span class="pointer" {{action 'play' 'song'}}>{{song.title}} {{fa-icon "play-circle"}}</span>
	</div>
	<div class="artist">
		<span class="pointer" {{action 'searchText' song.artist}}>by {{song.artist}}</span>
	</div>
	<img class="music-image-small full-width" src="{{imageToDisplay}}">
	<div class="album">
		{{#if song.albumLink}}
	 		<span class="pointer" {{action 'play' 'album'}}>{{song.album}} ({{song.year}}) {{fa-icon "play-circle"}}</span>
	 	{{else}}
			{{song.album}} ({{song.year}})
		{{/if}}
	</div>
	{{#if song.hasVideo}}
		<div class="video pointer" {{action 'play' 'video'}}>
			Video {{fa-icon 'fa fa-youtube-play'}}
		</div>
	{{/if}}
	<div class="text-container">
		<div class="review">
			<span class="name bold">{{song.submittedBy}}</span>
			<span class="comment-body">{{song.review}}</span>
			<br>
			<div> - {{format-date song.createdAt}} </div>
		</div>
		<button class="btn comments-btn" {{action 'showComments'}}>Comments ({{uniqueComments.length}})</button>
		{{#if isShowingComments}}
			<div class="comment-list">
				{{#each uniqueComments as |comment|}}
					<div class="comment">
						<span class="name bold">{{comment.postedBy}}</span>
						<span class="comment-body">{{comment.comment}}</span>
						<div> - {{format-date comment.createdAt}}</div>
					</div>
				{{/each}}
				{{textarea value=newComment placeholder="Thoughts?" class="comment-box form-control"}}
				{{#if newComment}}
					<div class="center">
						<button class="btn btn-sm btn-success" {{action 'submitComment'}}>âœ“</button>
						<button class= "btn btn-sm btn-danger" {{action 'discardComment'}}>X</button>
					</div>
				{{/if}}
			</div>
		{{/if}}
		<hr>
		<div class="tag-list">
			{{#each uniqueTags as |tag|}}
				<button class="btn btn-sm btn-tag" {{action 'searchText' tag.name}}>{{tag.name}}</button>
			{{/each}}
			<button class="btn btn-sm btn-tag" {{action 'showTagForm'}}>Tag {{fa-icon "plus-circle"}}</button>
			{{#if isShowingTagForm}}
				<div class="submit-tag-wrapper">
					{{tag-button tagCollection=tagCollection submitTag='submitTag'}}
				</div>
			{{/if}}
		</div>
	</div>
</div>