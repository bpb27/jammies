<div class="container song-form page-body">
	<div class="col-md-3">
		<img src="{{{image}}}" />
		<button class="btn btn-success form-control" {{action 'submit'}}>Submit</button>
		<button class="btn btn-warning form-control" {{action 'discard'}}>Nevermind</button>
		{{#if error}}
			<div class="error">{{error}}</div>
		{{/if}}
	</div>
	<div class="col-md-8">
		<div class="header">Add at least one link:</div>

		{{input value=spotify placeholder="Spotify URI" class="form-control link-input"}}
		<div class="video-demo">?
			<video autoplay loop muted>
				<source src="assets/videos/vid-spotify.mp4" type="video/mp4">
			</video>
		</div>

		{{input value=youtube placeholder="YouTube Link" class="form-control link-input"}}
		<div class="video-demo">?
			<video autoplay loop muted>
				<source src="assets/videos/vid-youtube.mp4" type="video/mp4">
			</video>
		</div>
		{{#if youtube}}
			<h5>Video? {{input type="checkbox" name="Video" checked=hasVideo}}</h5>
		{{/if}}

		{{input value=soundcloud placeholder="SoundCloud Embed Link" class="form-control link-input"}}
		<div class="video-demo">?
			<video autoplay loop muted>
				<source src="assets/videos/vid-soundcloud.mp4" type="video/mp4">
			</video>
		</div>

		<div class="header">Why it's cool:</div>
		{{textarea value=review placeholder="Your thoughts..." class="form-control"}}

		<div class="header">Add a Spotify URI, and this will automatically populate:</div>
		{{input value=title placeholder="Title" class="form-control"}}
		{{input value=artist placeholder="Artist" class="form-control"}}
		{{input value=album placeholder="Album" class="form-control"}}
		{{input value=year placeholder="Year" class="form-control"}}

	</div>
</div>
<img class="background-image-bottom" src="assets/images/records.jpg" />
